# Wallet Suite Environment Configuration

# ============================================
# RPC Endpoints
# ============================================

# Ethereum Mainnet
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Ethereum Sepolia Testnet
ETH_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Polygon Mainnet
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Solana Mainnet
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Solana Devnet
SOLANA_DEVNET_RPC_URL=https://api.devnet.solana.com

# ============================================
# Local Development
# ============================================

# Local Anvil (EVM)
LOCAL_EVM_RPC_URL=http://127.0.0.1:8545

# Local Solana Test Validator
LOCAL_SOLANA_RPC_URL=http://127.0.0.1:8899

# ============================================
# MPC Configuration
# ============================================

# MPC Party Index (0, 1, or 2 for 3-party setup)
MPC_PARTY_INDEX=0

# MPC Threshold (minimum parties needed to sign)
MPC_THRESHOLD=2

# MPC Party URLs (comma-separated)
MPC_PARTY_URLS=http://localhost:9001,http://localhost:9002,http://localhost:9003

# ============================================
# Security
# ============================================

# Encryption key derivation iterations (higher = more secure but slower)
KDF_ITERATIONS=100000

# Session timeout in milliseconds (default: 15 minutes)
SESSION_TIMEOUT_MS=900000

# ============================================
# Development
# ============================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable detailed transaction logging
DEBUG_TRANSACTIONS=false
