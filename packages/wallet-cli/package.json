{
  "name": "@open-wallet/wallet-cli",
  "version": "0.0.1",
  "description": "Command-line wallet interface for Wallet Suite",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "wallet": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "tsx src/cli.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "@open-wallet/keyring": "workspace:*",
    "@open-wallet/storage": "workspace:*",
    "@open-wallet/types": "workspace:*",
    "@open-wallet/utils": "workspace:*",
    "@open-wallet/wallet-core": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  }
}
