{
  "name": "@open-wallet/wallet-cli",
  "version": "0.0.1",
  "description": "Command-line wallet interface for Wallet Suite",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "wallet": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "tsx src/cli.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "@open-wallet/chains-evm": "workspace:*",
    "@open-wallet/chains-solana": "workspace:*",
    "@open-wallet/keyring": "workspace:*",
    "@open-wallet/storage": "workspace:*",
    "@open-wallet/types": "workspace:*",
    "@open-wallet/utils": "workspace:*",
    "@open-wallet/wallet-core": "workspace:*",
    "@solana/web3.js": "^1.98.4",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "ora": "^9.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
