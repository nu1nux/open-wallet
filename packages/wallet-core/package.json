{
  "name": "@open-wallet/wallet-core",
  "version": "0.0.1",
  "description": "Core wallet implementation for Wallet Suite",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@open-wallet/chains-evm": "workspace:*",
    "@open-wallet/chains-solana": "workspace:*",
    "@open-wallet/crypto": "workspace:*",
    "@open-wallet/keyring": "workspace:*",
    "@open-wallet/storage": "workspace:*",
    "@open-wallet/types": "workspace:*",
    "@open-wallet/utils": "workspace:*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  }
}
